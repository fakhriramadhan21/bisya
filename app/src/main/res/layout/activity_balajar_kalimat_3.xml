<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course.kalimat.belajar_kalimat_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green"
            android:text="Kembali" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="KALIMAT TUNGGAL"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/kalimat_satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="akuCintaKamu"
        android:text="1. aku cinta kamu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/kalimat_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Ibu sedang memasak"
        android:textSize="24sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/kalimat_tiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Kakak pergi ke sekolah"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kalimat_empat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Imam pergi memancing"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/kalimat_tiga" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Adi pergi berangkat ke kantor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/kalimat_empat" />


</LinearLayout>
